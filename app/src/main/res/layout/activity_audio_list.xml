<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page_voice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Fragments.AudioListFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/audio_fragment_image_nothing"
        android:layout_width="140dp"
        android:layout_height="129dp"
        android:src="@drawable/no_files"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/audio_fragment_text_nothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет данных"
        android:visibility="gone"
        android:textColor="?colorPrimary"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/audio_fragment_image_nothing"
        app:layout_constraintStart_toStartOf="@+id/audio_fragment_image_nothing"
        app:layout_constraintTop_toBottomOf="@+id/audio_fragment_image_nothing" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Fragments.AudioListFragment">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewTabAudioList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-6043694180023070/2709885324"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/audio_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
          />

        <include layout="@layout/player_sheet" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
