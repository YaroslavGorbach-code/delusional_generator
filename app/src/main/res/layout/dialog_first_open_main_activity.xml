<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="20dp"
                    android:text="@string/about_app"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:text="Выберите тему"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/redButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/choose_theme_red_round"
                        android:layout_marginEnd="5dp"/>
                    <Button
                        android:id="@+id/blueButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/choose_theme_blue_round"/>
                    <Button
                        android:id="@+id/greenButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/choose_theme_green_round"/>
                    <Button
                        android:id="@+id/orangeButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/choose_theme_orange_round"/>
                    <Button
                        android:id="@+id/purpleButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/choose_theme_purple_round"/>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>

    </LinearLayout>

