<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="?colorPrimary"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Выберите тему"
        android:padding="20dp"
/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

 <ImageButton
     android:id="@+id/redButton"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@drawable/choose_theme_red_round"
     android:layout_marginEnd="5dp"/>
    <ImageButton
        android:id="@+id/blueButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/choose_theme_blue_round"/>
    <ImageButton
        android:id="@+id/greenButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/choose_theme_green_round"/>
    <ImageButton
        android:id="@+id/orangeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/choose_theme_orange_round"/>
    <ImageButton
        android:id="@+id/purpleButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/choose_theme_purple_round"/>
</LinearLayout>
</LinearLayout>