<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/itemEx"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:layout_margin="8dp"
    android:focusable="true"
    android:background="?selectableItemBackground"
    app:cardElevation="2dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ex_item_image"
            android:layout_width="?listPreferredItemHeightLarge"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scaleType="centerInside"
            tool:ignore="ContentDescription"
            tool:src="@drawable/ic_list_test" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ex_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ex_item_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="8dp"
            android:text="@string/s3"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ex_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ex_name"
            android:layout_toEndOf="@+id/ex_item_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/s1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>