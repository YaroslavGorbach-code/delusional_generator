<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/exercisesFragment">

    <fragment
        android:id="@+id/exercisesFragment"
        android:name="com.YaroslavGorbach.delusionalgenerator.screen.exercises.ExercisesFragment"
        android:label="Все упражнения"
        tools:layout="@layout/fragment_exercises" >
        <action
            android:id="@+id/action_exercisesFragment_v_2_to_audioListFragment"
            app:destination="@id/audioListFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:popEnterAnim="@anim/fragment_open_enter" />
        <action
            android:id="@+id/action_exercisesFragment_v_2_to_favoriteExsFragment"
            app:destination="@id/favoriteExsFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:popEnterAnim="@anim/fragment_open_enter" />
        <action
            android:id="@+id/action_exercisesFragment_v_2_to_allExsByCategoryFragment"
            app:destination="@id/allExsByCategoryFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:popEnterAnim="@anim/fragment_open_enter" />
        <action
            android:id="@+id/action_exercisesFragment_v_2_to_settingsFragment2"
            app:destination="@id/settingsFragment2"
            app:enterAnim="@anim/fragment_open_enter"
            app:popEnterAnim="@anim/fragment_open_enter" />
        <action
            android:id="@+id/action_exercisesFragment_v_2_to_randomTrainingsFragment"
            app:destination="@id/randomTrainingsFragment" />
        <action
            android:id="@+id/action_exercisesFragment_to_exercisesDescriptionFragment"
            app:destination="@id/exercisesDescriptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/exercisesDescriptionFragment"
        android:name="com.YaroslavGorbach.delusionalgenerator.screen.description.DescriptionFragment"
        tools:layout="@layout/exercise_description" >
        <argument
            android:name="exId"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_exercisesDescriptionFragment_to_exercisesCategory3Fragment"
            app:destination="@id/exercisesCategory3Fragment"
            app:enterAnim="@android:anim/fade_in"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popUpTo="@id/exercisesDescriptionFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_exercisesDescriptionFragment_to_exercisesCategory2Fragment"
            app:destination="@id/exercisesCategory2Fragment"
            app:enterAnim="@android:anim/fade_in"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popUpTo="@id/exercisesDescriptionFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_exercisesDescriptionFragment_to_exercisesCategory1Fragment"
            app:destination="@id/exercisesCategory1Fragment"
            app:enterAnim="@android:anim/fade_in"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popUpTo="@id/exercisesDescriptionFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_exercisesDescriptionFragment_to_statisticsFragment"
            app:destination="@id/statisticsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/audioListFragment"
        android:name="com.YaroslavGorbach.delusionalgenerator.screen.audioPlayer.AudioListFragment"
        android:label="Записи"
        tools:layout="@layout/activity_audio_list" />
    <fragment
        android:id="@+id/favoriteExsFragment"
        android:name="com.YaroslavGorbach.delusionalgenerator.screen.favorite.FavoriteExsFragment"
        android:label="Избранные"
        tools:layout="@layout/fragment_favorit_exs" >
        <action
            android:id="@+id/action_favoriteExsFragment_to_exercisesDescriptionFragment"
            app:destination="@id/exercisesDescriptionFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/allExsByCategoryFragment"
        android:name="com.YaroslavGorbach.delusionalgenerator.screen.exercisesByCategory.AllExsByCategoryFragment"
        android:label="{categoryName}"
        tools:layout="@layout/fragment_all_exs_by_category" >
        <argument
            android:name="categoryId"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_allExsByCategoryFragment_to_exercisesDescriptionFragment"
            app:destination="@id/exercisesDescriptionFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:popEnterAnim="@anim/fragment_open_enter" />
        <argument
            android:name="categoryName"
            app:argType="string"
            android:defaultValue="Все упражнения" />
    </fragment>
    <fragment
        android:id="@+id/exercisesCategory1Fragment"
        android:name="com.YaroslavGorbach.delusionalgenerator.screen.exercise.ExercisesCategory1Fragment"
        tools:layout="@layout/fragment_exercises_category_1">
        <argument
            android:name="idEx"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.YaroslavGorbach.delusionalgenerator.screen.statistics.StatisticsFragment"
        android:label="Статистика"
        tools:layout="@layout/fragment_statistics" >
        <argument
            android:name="exId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/exercisesCategory3Fragment"
        android:name="com.YaroslavGorbach.delusionalgenerator.screen.exercise.ExercisesCategory3Fragment"
        tools:layout="@layout/fragment_exercises_category_3">
        <argument
            android:name="exId"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/exercisesCategory2Fragment"
        android:name="com.YaroslavGorbach.delusionalgenerator.screen.exercise.ExercisesCategory2Fragment"
        tools:layout="@layout/fragment_exercises_category_2">
        <argument
            android:name="idEx"
            android:defaultValue="-1"
            app:argType="integer" />
        <action
            android:id="@+id/action_exercisesCategory2Fragment_to_exercisesDescriptionFragment"
            app:destination="@id/exercisesDescriptionFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:popUpTo="@id/exercisesCategory2Fragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment2"
        android:name="com.YaroslavGorbach.delusionalgenerator.screen.settings.SettingsFragment"
        android:label="Главная"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/randomTrainingsFragment"
        android:name="com.YaroslavGorbach.delusionalgenerator.Fragments.RandomTrainingsFragment"
        android:label="fragment_rangom_trainings"
        tools:layout="@layout/fragment_rangom_trainings" />
</navigation>